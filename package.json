{
  "name": "blitz-root",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --concurrency=8 --continue",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "dependencies": {
    "eslint": "7.32.0",
    "husky": "7.0.4",
    "lint-staged": "12.1.7",
    "only-allow": "1.0.0",
    "prettier": "^2.5.1",
    "prettier-plugin-prisma": "3.8.0",
    "pretty-quick": "3.1.3",
    "turbo": "latest",
    "vitest": "0.1.17"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "test": {
        "outputs": [
          "coverage/**"
        ],
        "dependsOn": []
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false,
        "dependsOn": [
          "^dev"
        ]
      },
      "clean": {
        "cache": false
      }
    }
  },
  "npmClient": "pnpm",
  "packageManager": "pnpm@6.21.0"
}
